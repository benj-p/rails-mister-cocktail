<div class="container content-container">
  <h1>Create a cocktail</h1>

  <%= simple_form_for [@cocktail] do |f| %>
    <%= f.input :name, placeholder: "mojito" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
